<link rel="stylesheet" type="text/css" href="login.css">
<form id="login-form" method="POST" action="/login">
	<div class="login">
        <div class="login-screen">
            <div class="app-title">
                <h1>Login</h1>
            </div>
            <div class="login-form">
            	{{#if error}}
		    		<p class="error">{{error}}</p>
		    	{{/if}}
                <div class="control-group">
                    <input id="login-name" type="text" class="login-field" value="" placeholder="username" name="username">
                    <label class="login-field-icon fui-user" for="login-name"></label></div>
                <div class="control-group">
                    <input id="login-pass" type="password" class="login-field" value="" placeholder="password" name="password">
                    <label class="login-field-icon fui-lock" for="login-pass"></label></div>
                <input type="submit" value="Log in" class="btn btn-primary btn-large btn-block">
                <p>Don't have an account? <a id="join" href='/register'>Join today!</a></p>
            </div>	
    	</div>
    </div>
</form>